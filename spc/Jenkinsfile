pipeline {
    agent { label 'jdk-17' }
    triggers { 
        pollSCM('5 * * * *') }
    parameters {
        choice( name: 'spc', choices: ['mvn install', 'mvn package', 'mvn clean'], description: 'spc package')
    }
    tools {
        maven 'maven'
        jdk 'jdk-17'
    }
    stages {
        stage('spc git') {
            steps {
                git url: 'https://github.com/spring-projects/spring-petclinic.git',
                    branch: 'main'
            }
        }
        stage('packages') {
            steps {
                rtMavenDeployer (
                    id: "maven-deployer",
                    serverId: "JFROG",
                    releaseRepo: nadeem-jfrog-libs-release,
                    snapshotRepo: nadeem-jfrog-libs-snapshot,
                )
                rtMavenRun (
                    tool: 'maven',
                    pom: 'pom.xml',
                    goals: 'clean install',
                    deployerId: "maven-deployer",
                )
                rtPublishBuildInfo (
                    serverId: "JFROG"
                )
            }
        }
        stage('reporting') {
            steps {
                junit testResults: '**/target/surefire-reports/TEST-*.xml'
            }
        }
        
    }
}